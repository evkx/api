@functions {
    void RenderEvFeature(EVFeature? feature)
    {
        if(feature != null && feature.Available())
        {
            if(feature.FeatureStatus.Equals(FeatureStatus.Optional))
            {
                <span>Optional</span>
            }
            else
            {
                <span>Standard</span>
            }
        }
        else if(feature == null || feature.FeatureStatus.Equals(FeatureStatus.Unknown))
        {
            <span>?</span>
        }
        else
        {
            <span>Not available</span>
        }
    }
}


@functions {
    void RenderSeatFeature(bool seatOptionWithFeature, bool seatOptionWithOptionalFeature, bool seatOptionWithoutFeature)
    {

        if (seatOptionWithFeature && !seatOptionWithOptionalFeature && !seatOptionWithoutFeature)
        {
            @Html.Raw("Standard")
        }
        else if (seatOptionWithFeature && seatOptionWithOptionalFeature && !seatOptionWithoutFeature)
        {
            @Html.Raw("Optional")
        }
        else if (seatOptionWithFeature && (seatOptionWithOptionalFeature || seatOptionWithoutFeature))
        {
            @Html.Raw("Optional")
        }
        else if (seatOptionWithOptionalFeature)
        {
            @Html.Raw("Optional")
        }
        else if (!seatOptionWithFeature && !seatOptionWithOptionalFeature && seatOptionWithoutFeature)
        {
            @Html.Raw("Not available")
        }
        else
        {
            @seatOptionWithFeature @seatOptionWithOptionalFeature @seatOptionWithoutFeature
        }
    }
}

 @functions {
    void RenderFeature(List<EVFeature?> evfeatures)
    {
        bool unknown = false;
        bool notAvailable = false;
        bool optional = false;
        bool standard = false;

        foreach(EVFeature? evFeature in evfeatures)
        {
            if(evFeature == null)
            {
                unknown = true;
            }
            else if(evFeature.Available())
            {
                if(evFeature.FeatureStatus.Equals(FeatureStatus.Optional))
                {
                    optional = true;
                }
                else
                {
                    standard = true;
                }
            }
            else
            {
                notAvailable = true;
            }
        }

        if (standard && !optional && !notAvailable && !unknown)
        {
            @Html.Raw("Standard")
        }
        else if (standard && optional || !notAvailable)
        {
            @Html.Raw("Optional")
        }
        else if (standard && (optional || notAvailable))
        {
            @Html.Raw("Optional")
        }
        else if (optional)
        {
            @Html.Raw("Optional")
        }
        else if (!standard && !optional)
        {
            @Html.Raw("Not available")
        }
        else
        {
            @unknown @optional @notAvailable
        }
    }
}